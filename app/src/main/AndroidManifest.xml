<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <!-- Required for Android 11+ to query installed packages -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <application
        android:name=".RepoStoreApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RepoStore"
        android:usesCleartextTraffic="false"
        tools:targetApi="36">
        
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.activity.AppListActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        
        <activity
            android:name=".ui.activity.DetailActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.activity.DeveloperActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.activity.SettingsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.activity.GitHubTokenActivity"
            android:exported="false"
            android:parentActivityName=".ui.activity.SettingsActivity" />

        <activity
            android:name=".ui.activity.GitHubSignInActivity"
            android:exported="false"
            android:parentActivityName=".ui.activity.SettingsActivity" />

        <activity
            android:name=".ui.activity.AboutActivity"
            android:exported="false"
            android:parentActivityName=".ui.activity.SettingsActivity" />

        <activity
            android:name=".ui.activity.AppDeveloperActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.activity.ScreenshotViewerActivity"
            android:exported="false"
            android:theme="@style/Theme.RepoStore.Fullscreen"
            android:parentActivityName=".ui.activity.DetailActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
            
    </application>

</manifest>
